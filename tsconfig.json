{
	"compilerOptions": {
		"module": "es2015",
		"target": "es2015",
		"outDir": "dist",
		"lib": [
			"dom",
			"esnext"
		],
		"moduleResolution": "node",
		"sourceMap": true,
		"inlineSources": true,
		"declaration": true,
		"declarationDir": "dist",
		"typeRoots": [
			"node_modules/@types"
		],
		"incremental": true
	},
	"include": [
		"src/**/*"
	]
}